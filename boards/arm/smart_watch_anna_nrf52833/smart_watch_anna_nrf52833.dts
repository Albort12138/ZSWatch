/dts-v1/;
#include <nordic/nrf52833_qiaa.dtsi>
#include "smart_watch_anna_nrf52833-pinctrl.dtsi"

/ {
	model = "smart_watch_anna_nrf52833";
	compatible = "jakob-krantz,smart-watch-anna-nrf52833";

	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,display = &gc9a01;
		zephyr,code-partition = &slot0_partition;
	};

	// TODO change to watch buttons
	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 2 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
		};
		button1: button_1 {
			gpios = <&gpio0 23 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 1";
		};
		button2: button2 {
			gpios = <&gpio0 9 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 2";
		};
	};
	
	vbatt {
		compatible = "voltage-divider";
		io-channels = <&adc 3>;
		output-ohms = <220000>;
		full-ohms = <(1500000 + 220000)>;
		power-gpios = <&gpio0 4 0>;
	};

	regulator_3v3: regulator-3v3-ctrl {
		compatible = "regulator-fixed-sync", "regulator-fixed";
		label = "vsys-3v3-ctrl";
		regulator-name = "display";
		enable-gpios = <&gpio0 3 GPIO_ACTIVE_LOW>;
		regulator-boot-on;
	};

	regulator_5v: regulator-5v-ctrl {
		compatible = "regulator-fixed-sync", "regulator-fixed";
		label = "vsys-5v-ctrl";
		regulator-name = "max30101";
		enable-gpios = <&gpio0 31 GPIO_ACTIVE_LOW>;
		regulator-boot-on;
	};
	vib_pwr: vib-pwr-ctrl {
		compatible = "regulator-fixed";
		label = "vib-pwr-ctrl";
		regulator-name = "vib-pwr-ctrl";
		enable-gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm0 0 PWM_MSEC(20) 0>;
		};
		pwm_led1: pwm_led_1 {
			pwms = <&pwm1 0 PWM_MSEC(20) 0>;
		};
	};
	/*
	fstab {
		compatible = "zephyr,fstab";
		lfs: lfs {
		  compatible = "zephyr,fstab,littlefs";
		  mount-point = "/lfs";
		  partition = <&lfs1_part>;
		  read-size = <16>;
		  prog-size = <16>;
		  cache-size = <64>;
		  lookahead-size = <32>;
		  block-cycles = <512>;
		};
	  };
	*/
	aliases {
		sw0 = &button0;
		sw1 = &button1;
		sw2 = &button2;
		accelerometer = &lis2ds12;
		pwm-led0 = &pwm_led0;
		pwm-led1 = &pwm_led1;
	};
};

&uart0 {
	compatible = "nordic,nrf-uart";
	status = "okay";
	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

&adc {
	status = "okay";
};

&i2c0 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_FAST>;

	pinctrl-0 = <&i2c0_default>;
	pinctrl-1 = <&i2c0_sleep>;
	pinctrl-names = "default", "sleep";
	lis2ds12: lis2ds12@1D {
		compatible = "st,lis2ds12", "st,lis2ds";
		label = "lis2ds12";
		reg = <0x1D>;
		irq-gpios = <&gpio0 29 GPIO_ACTIVE_HIGH &gpio0 28 GPIO_ACTIVE_HIGH>;
	};
	max30101@57 {
		status = "okay";
		compatible = "maxim,max30101";
		reg = <0x57>;
		label = "MAX30101";
	};
};

&spi1  {
	status = "okay";
	compatible = "nordic,nrf-spi";
	pinctrl-0 = <&spi1_default>;
	pinctrl-1 = <&spi1_sleep>;
	pinctrl-names = "default", "sleep";
	cs-gpios = <&gpio0 16 GPIO_ACTIVE_LOW>;//,	/* D4 */
	//<&arduino_header 10 GPIO_ACTIVE_LOW>;	/* D04 */
	//sck-pin = < 12 >;
	//miso-pin = < 14 >;
	//mosi-pin = < 18 >;
	//cs-gpios = < &gpio0 15 GPIO_ACTIVE_LOW >;
	gc9a01: gc9a01@0 {
		compatible = "jkra,gc9a01";
		status = "okay";
		spi-max-frequency = <8000000>;
		reg = <0>;
		width = <240>;
		label = "jkra_gd0a401";
		height = <240>;
		//bl-gpios = <&arduino_header 7 GPIO_ACTIVE_LOW>;	/* D1 */
		bl-gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;	/* NOT WORKING */
		reset-gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>;	/* A0 */
		dc-gpios = <&gpio1 0 GPIO_ACTIVE_HIGH>;		/* D8 */
		//reset-gpios = <&gpio0 11 GPIO_ACTIVE_LOW>;
		//pixel-format = <ILI9XXX_PIXEL_FORMAT_RGB888>;
		//rotation = <90>;
		//frmctr1 = [00 18];
		//pwctrl1 = [23 00];
		//vmctrl1 = [3e 28];
		//vmctrl2 = [86];
		//pgamctrl = [0f 31 2b 0c 0e 08 4e f1 37 07 10 03 0e 09 00];
		//ngamctrl = [00 0e 14 03 11 07 31 c1 48 08 0f 0c 31 36 0f];
	};

};

&spi2 {
	status = "okay";
	pinctrl-0 = <&spi2_default>;
	pinctrl-1 = <&spi2_sleep>;
	pinctrl-names = "default", "sleep";
	cs-gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
	mx25r32: mx25r3235f@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <8000000>;
		label = "MX25R32";
		size = <33554432>;
		jedec-id = [c2 28 16];
		/*
		sfdp-bfp = [
			e5 20 f1 ff  ff ff ff 03  44 eb 08 6b  08 3b 04 bb
			ee ff ff ff  ff ff 00 ff  ff ff 00 ff  0c 20 0f 52
			10 d8 00 ff  23 72 f5 00  82 ed 04 cc  44 83 68 44
			30 b0 30 b0  f7 c4 d5 5c  00 be 29 ff  f0 d0 ff ff
		];
		has-dpd;
		t-enter-dpd = <10000>;
		t-exit-dpd = <35000>;*/
		reset-gpios = <&gpio0 20 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
		wp-gpios = <&gpio0 7 GPIO_ACTIVE_LOW>;
	};
};

&pwm0 {
	status = "okay";
	pinctrl-0 = <&pwm0_default>;
	pinctrl-1 = <&pwm0_sleep>;
	pinctrl-names = "default", "sleep";
};

&pwm1 {
	status = "okay";
	pinctrl-0 = <&pwm1_default>;
	pinctrl-1 = <&pwm1_sleep>;
	pinctrl-names = "default", "sleep";
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x0 0xc000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0xc000 0x32000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x3e000 0x32000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x70000 0xe000>;
		};
		storage_partition: partition@7e000 {
			label = "storage";
			reg = <0x7e000 0x2000>;
		};
	};
};

&mx25r32 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		partition_cfg: partition@0 {
			label = "littlefs_cfg";
			reg = <0x00000000 0x000010000>;
		};
		partition_lfs: partition@10000 {
			label = "littlefs";
			reg = <0x000010000 0x00080000>;
		};
	};
};

// Zephyr gets mad if this is not set, even thought we don't do any switching
&radio {
	status = "okay";
	dfe-antenna-num = <10>;
	dfe-pdu-antenna = <0x1>;
	dfegpio0-gpios = <&gpio1 1 0>;
	dfegpio1-gpios = <&gpio1 1 0>;
	dfegpio2-gpios = <&gpio1 1 0>;
	dfegpio3-gpios = <&gpio1 1 0>;
};