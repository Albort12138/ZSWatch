    config DISABLE_PAIRING_REQUIRED
        bool
    prompt "Disable encryption required for BLE connection (pairing/bonding)"
    default n
    help
        "Disable encryption for BLE connection (pairing/bonding). Used only for debugging purposes."
endmenu

